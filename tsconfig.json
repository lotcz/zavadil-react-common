{
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "es5",
		"module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "jsx": "react-jsx",
		"lib": [
			"es6",
			"dom",
			"es2020.bigint"
		],
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"strict": true,
	},
	"include": [
		"src",
		"*.tsx",
		"*.ts"
	],
	"exclude": [
		"node_modules/**",
		"dist",
		"docker-compose.yml",
		".env-example"
	]
}
